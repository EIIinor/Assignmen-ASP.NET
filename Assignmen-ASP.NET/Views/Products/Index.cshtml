@model ProductsIndexViewModel
@{
    ViewData["Title"] = Model.Title;

    //var products = await productService.GetAllASync();
}

<div class="container" style="padding-top: 150px">

    <h1 class="title">@Model.Title</h1>

    <div class="mb-5">
        <a class="link" asp-controller="products" asp-action="register">Register new product</a>
    </div>



    @foreach(var product in Model.Products)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex justify-content-start align-items-center">
                    <img src="/images/products/@product.ImageUrl" alt="@product.Name" height="100" width="100"/>
                    <div class="ms-4">
                        <div>@product.ArticleNumber</div>
                        <div>@product.Name</div>
                        <div>@product.Price</div>
                        <div>@product.Description</div>
                    </div>
                </div>
            </div>
        </div>
    }



