@{
    ViewData["Title"] = User.FindFirst("DisplayName")?.Value;
    var profilePictureUrl = User.FindFirst("ProfilePicture")?.Value;
}

<div class="container" style="padding-top:100px ; display:flex ; align-items:flex-start" >
    <div style="padding-right:50px">
        <img src="~/images/profiles/@profilePictureUrl" alt="Profile Picture" style="height:150px ; width:100px" />
    </div>
    <div>
        <h1>Hello @ViewData["Title"]!</h1>
    </div>
</div>
