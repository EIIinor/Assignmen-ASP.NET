@model LoginViewModel
@{
    ViewData["Title"] = "Logga in";
}


<div class="d-flex justify-content-center" style="padding-top:200px">
    <div class="col-6">

        <form asp-action="Register" method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <a asp-controller="registerUsers" asp-action="index" class="text-danger">Don't have an Account yet?</a>
                <input asp-for="Email" class="form-control" />
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <small><span asp-validation-for="Password" class="text-danger"></span></small>
            </div>


            <button type="submit" class="btn btn-success mt-2">LOGGA IN</button>

        </form>

    </div>
</div>